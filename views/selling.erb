
<div class="container p-5">
	<div class="card container p-5">
	<h1 class="text-center">What are you selling</h1>
	<form  action="/seller/create" method="POST" class="pl-5">
		<div class="row">
			<div class="form-group col-sm-5">
			 <input  class="col" type="text" class="form-control" name="Item" placeholder="Item"> 
			 </div>
			<div class="form-group col-sm-5">
			 <input  class="col"type="text" class="form-control"  name="price"placeholder="$Price">
			</div>
		</div>
		<div class="form-group">
			<textarea rows="4" cols="50"  name="description" placeholder=" Product description"></textarea>
		</div>
		<div class="form-group">
	   <input type="file" name="imgs" accept="image/x-png,image/gif,image/jpeg"/>
	  	</div>
	  	<div class="row">
		  	<div class="form-group col-sm-5">
			  	 <select  name="option" class="custom-select">
				    <option selected>Condition</option>
				    <option value="excellent">Excellent</option>
				    <option value="Good">Good</option>
				    <option value="Bad">Bad</option>
			  	</select>
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
	</div>
</div>